{% extends 'base.html.twig' %}

{% block title %}4Troll - Login{% endblock %}


{% block body %}
<h1 class="text-center hardGrey">Login</h1>

<div class="col-md-8 col-md-offset-2">

    

    <form action="{{ path('login') }}" method="post" class="hardGrey">

    {% if error %}
        <div class="text-center text-danger bg-danger" id="error">
            <span class="glyphicon glyphicon-remove"></span>{{ error.messageKey|trans(error.messageData, 'security') }}
        </div>
    {% endif %}

        <div class="form-group">
            <label class="control-label required" for="username" style="margin:none">Username:</label>
            <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" />
        </div>

        <div class="form-group">
            <label class="control-label required" for="password">Password:</label>
            <input class="form-control" type="password" id="password" name="_password" />
        </div>

        <button class="col-md-12 btn btn-success btn-block text-white" style="margin-top: 10px;margin-bottom: 10px;"type="submit" >Login</button>
    
    </form>

    

</div>

<div class="col-md-8 col-md-offset-2 text-center" >
<p> New to this website? Please 
<a class="text-center secondaryColor" href="{{path('register')}}" >Register</a>
</p>
</div>
{% endblock %}